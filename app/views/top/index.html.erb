<table class="table" style="table-layout:fixed">
  <thead>
    <tr>
      <th style="width:60px">タイトル</th>
      <th style="width:10px">サイト名</th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
  <tbody>
    <tr>
      <td><%= link_to "#{article.title}", article.url %></td>
      <td><%= article.name %></td>
    </tr>
  </tbody>
  <% end %>
</table>